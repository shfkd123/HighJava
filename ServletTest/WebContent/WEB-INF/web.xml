  <servlet>
  	<servlet-name>T09_ServletRequestListenerTest</servlet-name>
  	<servlet-class>kr.or.ddit.basic.T09_ServletRequestListenerTest</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>T09_ServletRequestListenerTest</servlet-name>
